	<groupId>de.rrze</groupId>
	<artifactId>jpwgen</artifactId>
	<name>jpwgen</name>
	<version>1.4.8</version>
	<description>
		The 'jpwgen' program is a Java-based password generator whose
		functionality resembles the popular 'pwgen' program.
	</description>

	<properties>
		<test.default>default</test.default>
		<test.secure>secure</test.secure>
		<test.normal>builder</test.normal>
		<project.build.sourceEncoding>
			UTF-8
		</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<archive>
						<index>true</index>

						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>
								de.rrze.jpwgen.utils.PwHelper
							</mainClass>
							<packageName>
								de.rrze.jpwgen.utils
							</packageName>
							<!-- <addExtensions /> <classpathPrefix /> -->
						</manifest>

						<!-- <manifestEntries> <mode>development</mode> <url>${pom.url}</url> 
							<key>value</key> </manifestEntries> -->
					</archive>
					<!-- <useDefaultManifestFile> true </useDefaultManifestFile> <manifestFile> 
						src/main/resources/META-INF/MANIFEST.MF </manifestFile> -->
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<parallel>true</parallel>
					<threadCount>10</threadCount>
					<verbose>1</verbose>
					<!-- <groups>${test.default},${test.secure},${test.builder}</groups> -->
				</configuration>
			</plugin>

			<!-- replaced by a skin <plugin> <groupId>org.apache.maven.plugins</groupId> 
				<artifactId>maven-site-plugin</artifactId> <configuration> <templateFile>${basedir}/src/site/maven-site.vm</templateFile> 
				</configuration> </plugin> -->

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<chmod>true</chmod>
					<chmodMode>gu+rw</chmodMode>
					<chmodOptions>-Rf</chmodOptions>
				</configuration>
			</plugin>

		</plugins>

		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav</artifactId>
				<version>1.0-beta-2</version>
			</extension>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh-external</artifactId>
				<version>1.0-alpha-5</version>
			</extension>
		</extensions>

	</build>

